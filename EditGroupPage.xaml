<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmsScheduler.EditGroupPage"
             Title="EditGroupPage">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Nazwa grupy:" 
               FontSize="16"/>
        <Entry x:Name="GroupNameEntry" />

        <Button Text="Zapisz zmiany"
                Clicked="OnSaveClicked" />

        <BoxView HeightRequest="1" Color="Gray" />

        <Label Text="Kontakty w grupie:" 
               FontAttributes="Bold"
               FontSize="18" />

        <Button Text="Dodaj kontakt"
                Clicked="OnAddContactClicked" />

        <CollectionView x:Name="ContactsCollection"
                ItemsSource="{Binding GroupContacts}"
                SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="UsuÅ„"
                                   BackgroundColor="Tomato"
                                   Invoked="OnDeleteContact"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="0,5"
                       Padding="10"
                       CornerRadius="10"
                       BorderColor="LightGray">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Name}" 
                               FontSize="16"
                               VerticalOptions="Center"/>
                                <Label Text="{Binding PhoneNumber}" 
                               FontSize="14" 
                               VerticalOptions="Center"
                               TextColor="Gray"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
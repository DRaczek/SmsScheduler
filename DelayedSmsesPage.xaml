<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmsScheduler.DelayedSmsesPage"
             Title="DelayedSmsesPage">
    <CollectionView x:Name="SmsCollectionView"
                    ItemsSource="{Binding Calls}"
                    SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem Text="Usuń"
                                       BackgroundColor="Red"
                                       Clicked="SwipeItem_Clicked"
                                       BindingContext="{Binding .}" />
                            <SwipeItem Text="Wyświetl"
                                 BackgroundColor="Green"
                                 Clicked="SwipeItem_Clicked_1"
                                 BindingContext="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <StackLayout>
                        <Grid Padding="10,20" ColumnDefinitions="*,*">
                            <Label Text="{Binding DateTime, StringFormat='{0:yyyy-MM-dd HH:mm}'}"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />

                            <Label  Text="{Binding ContactsCount, StringFormat='{}{0} odbiorców'}"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center" Grid.Column="1"/>
                        </Grid>
                        <BoxView HeightRequest="2" Color="Black"></BoxView>
                    </StackLayout>
                    
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
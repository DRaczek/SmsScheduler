<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmsScheduler.SensSmsPage"
             Title="SensSmsPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Wiadomość:" FontSize="16"/>
        <Editor x:Name="MessageEditor" 
                AutoSize="TextChanges"
                HeightRequest="150"
                Placeholder="Wpisz wiadomość..." />

        <BoxView HeightRequest="2" Color="Black"/>
        <StackLayout Orientation="Horizontal">
            <Label>Wysłać z opoźnieniem?</Label>
            <CheckBox x:Name="isDelayedChck"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <DatePicker x:Name="DatePicker"/>
            <TimePicker x:Name="TimePicker"/>
        </StackLayout>
        <BoxView HeightRequest="2" Color="Black"/>

        <Button Text="Wyślij SMS do grupy"
                Clicked="OnSendSmsClicked"/>
    </VerticalStackLayout>
</ContentPage>